# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_ORG=your-github-org
GITHUB_REPO=your-repo-name

# GitLab Configuration (if using GitLab)
GITLAB_TOKEN=glpat-your-gitlab-token
GITLAB_URL=https://gitlab.com

# Container Registry
REGISTRY_URL=ghcr.io
REGISTRY_USERNAME=your-username
REGISTRY_PASSWORD=your-token

# SonarQube Configuration
SONAR_TOKEN=your-sonarqube-token
SONAR_HOST_URL=https://sonarqube.example.com
SONAR_PROJECT_KEY=your-project-key

# ArgoCD Configuration
ARGOCD_SERVER=argocd.example.com
ARGOCD_AUTH_TOKEN=your-argocd-token

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Cosign (Image Signing)
COSIGN_PASSWORD=your-cosign-password
COSIGN_PRIVATE_KEY_PATH=/path/to/cosign.key
COSIGN_PUBLIC_KEY_PATH=/path/to/cosign.pub

# Trivy Configuration
TRIVY_SEVERITY=CRITICAL,HIGH
TRIVY_IGNORE_UNFIXED=false

# AWS Configuration (for S3 SBOM storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_SBOM_BUCKET=your-sbom-bucket
