# LLM Security Gateway - Environment Configuration
# Copy this file to .env and fill in your values

# API Settings
API_HOST=0.0.0.0
API_PORT=8080
API_RELOAD=false
ENVIRONMENT=development

# Security
JWT_SECRET=your_very_secure_jwt_secret_key_change_this
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Redis (Rate Limiting & Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL (Audit Logs)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=llm_gateway
DB_USER=gateway_user
DB_PASSWORD=secure_database_password
DB_POOL_SIZE=20

# OPA (RBAC Policy Engine)
OPA_URL=http://localhost:8181
OPA_POLICY_PATH=/v1/data/llm/authz/allow

# DLP & PII Detection
DLP_MODE=redact  # Options: block, redact, alert
DLP_ENABLE_PII=true
DLP_ENABLE_SECRETS=true
PRESIDIO_SCORE_THRESHOLD=0.5

# Model API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
LOCAL_MODEL_URL=http://localhost:11434

# Rate Limiting Defaults
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_USER=100
RATE_LIMIT_PER_TENANT=1000
RATE_LIMIT_TOKEN_BUDGET=100000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, text
AUDIT_LOG_ENABLED=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
